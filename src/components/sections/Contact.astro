---
// Contact Section
---

<section id="contacto" class="section-padding bg-white">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
      <!-- Left Content -->
      <div>
        <span
          class="inline-block px-4 py-1.5 bg-blue-100 text-blue-700 rounded-full text-sm font-medium mb-6"
        >
          Contáctanos
        </span>
        <h2
          class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-6"
        >
          Agendar Consultoría
          <span class="text-blue-600">Gratuita</span>
        </h2>
        <p class="text-lg text-slate-600 mb-8">
          Conversemos sobre cómo podemos impulsar la transformación digital de
          tu empresa. Sin compromiso, sin costo.
        </p>

        <!-- Contact Info -->
        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-slate-900">Email</h3>
              <a
                href="mailto:contacto@hotusoft.com"
                class="text-blue-600 hover:text-blue-700 transition-colors"
              >
                contacto@hotusoft.com
              </a>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-slate-900">Oficina Virtual</h3>
              <p class="text-slate-600">
                Apoquindo 6410, Of 1004, Ps 10<br />
                Las Condes, Santiago, Chile
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-slate-900">
                Horario de atención videollamadas y mensajes
              </h3>
              <p class="text-slate-600">Lunes a Viernes: 9:00 - 18:00</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-slate-50 rounded-2xl p-8 lg:p-10">
        <form id="contact-form" class="space-y-6">
          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-slate-700 mb-2"
              >
                Nombre completo *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all"
                placeholder="Tu nombre"
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-slate-700 mb-2"
              >
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all"
                placeholder="tu@email.com"
              />
            </div>
          </div>

          <div>
            <label
              for="company"
              class="block text-sm font-medium text-slate-700 mb-2"
            >
              Empresa u emprendimiento
            </label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all"
              placeholder="Nombre de tu empresa o emprendimiento"
            />
          </div>

          <div>
            <label
              for="service"
              class="block text-sm font-medium text-slate-700 mb-2"
            >
              Servicio de interés
            </label>
            <select
              id="service"
              name="service"
              class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all bg-white"
            >
              <option value="">Selecciona un servicio</option>
              <option value="web">Desarrollo Web de Alto Rendimiento</option>
              <option value="rpa">Automatización y Eficiencia (RPA)</option>
              <option value="cloud">Soluciones Empresariales y Cloud</option>
              <option value="custom">Desarrollo a Medida</option>
            </select>
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-slate-700 mb-2"
            >
              Mensaje *
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all resize-none"
              placeholder="Cuéntanos sobre tu proyecto o necesidad..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-blue-800 transition-all shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40"
          >
            Enviar Mensaje
          </button>

          <p class="text-xs text-slate-500 text-center">
            Al enviar este formulario, aceptas nuestra política de privacidad.
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contact-form");
  const submitButton = form?.querySelector(
    'button[type="submit"]',
  ) as HTMLButtonElement;

  // API Configuration
  const API_URL =
    "https://u8d7r49o45.execute-api.us-east-1.amazonaws.com/prod/contact";
  const SITE_TOKEN = "b0b298aca12b3e8ffd64f64f9f3edbe7";

  // Auto-select service based on URL parameter
  const urlParams = new URLSearchParams(window.location.search);
  const serviceParam = urlParams.get("service");
  const serviceSelect = document.getElementById("service") as HTMLSelectElement;

  if (serviceParam && serviceSelect) {
    serviceSelect.value = serviceParam;
  }

  // Create notification element
  function showNotification(message: string, type: "success" | "error") {
    // Remove existing notifications
    const existing = document.getElementById("form-notification");
    if (existing) existing.remove();

    const notification = document.createElement("div");
    notification.id = "form-notification";
    notification.className = `fixed top-4 right-4 z-50 p-4 rounded-xl shadow-lg transition-all transform translate-x-0 max-w-md ${
      type === "success" ? "bg-green-500 text-white" : "bg-red-500 text-white"
    }`;
    notification.innerHTML = `
      <div class="flex items-center gap-3">
        <span class="text-lg">${type === "success" ? "✓" : "✕"}</span>
        <p class="font-medium">${message}</p>
      </div>
    `;
    document.body.appendChild(notification);

    // Auto-remove after 5 seconds
    setTimeout(() => {
      notification.style.opacity = "0";
      notification.style.transform = "translateX(100%)";
      setTimeout(() => notification.remove(), 300);
    }, 5000);
  }

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form as HTMLFormElement);

    // Prepare payload for Rhotumail
    const payload = {
      domain: "hotusoft.com",
      formId: "contacto_principal",
      token: SITE_TOKEN,
      payload: {
        name: formData.get("name") as string,
        email: formData.get("email") as string,
        company: (formData.get("company") as string) || "",
        service: (formData.get("service") as string) || "",
        message: formData.get("message") as string,
      },
    };

    // Disable button and show loading state
    if (submitButton) {
      submitButton.disabled = true;
      submitButton.innerHTML = `
        <span class="inline-flex items-center gap-2">
          <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Enviando...
        </span>
      `;
    }

    try {
      const response = await fetch(API_URL, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(payload),
      });

      const result = await response.json();

      if (response.ok) {
        showNotification(
          "¡Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.",
          "success",
        );
        (form as HTMLFormElement).reset();
      } else {
        showNotification(
          result.message ||
            "No se pudo enviar el mensaje. Por favor intenta nuevamente.",
          "error",
        );
      }
    } catch (error) {
      console.error("Error:", error);
      showNotification(
        "Error de conexión. Por favor verifica tu conexión e intenta nuevamente.",
        "error",
      );
    } finally {
      // Restore button state
      if (submitButton) {
        submitButton.disabled = false;
        submitButton.innerHTML = "Enviar Mensaje";
      }
    }
  });
</script>
