---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

import "../styles/main.css";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import ScrollSpy from "../components/ui/ScrollSpy.astro";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteURL =
  Astro.site?.toString().replace(/\/$/, "") || "https://hotusoft.com";

const {
  title,
  description = "HotuSoft - Desarrollo de Software, Automatización de Procesos y Soluciones Cloud para empresas y pymes en Chile.",
  image = "/social.webp",
} = Astro.props;

const ogImageURL = `${siteURL}${image}`;

// Structured Data - Organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "HOTU SOFTWARE SOLUTIONS SPA",
  alternateName: "HotuSoft",
  url: siteURL,
  logo: `${siteURL}/favicon.webp`,
  description: description,
  address: {
    "@type": "PostalAddress",
    streetAddress: "Av. Apoquindo 6410, Of. 212",
    addressLocality: "Las Condes",
    addressRegion: "Región Metropolitana",
    postalCode: "7550000",
    addressCountry: "CL",
  },
  contactPoint: {
    "@type": "ContactPoint",
    email: "contacto@hotusoft.com",
    contactType: "sales",
  },
  sameAs: [],
};

// Structured Data - WebSite
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "HotuSoft",
  url: siteURL,
  description: description,
  inLanguage: "es-CL",
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self' https:; img-src 'self' https: data:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; font-src 'self' https: data:;"
    />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Hreflang -->
    <link rel="alternate" hreflang="es-CL" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0a1628" />
    <meta name="msapplication-TileColor" content="#0a1628" />

    <!-- SEO Meta Tags -->
    <meta name="author" content="HOTU SOFTWARE SOLUTIONS SPA" />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="googlebot" content="index, follow" />
    <meta
      name="keywords"
      content="desarrollo software, automatizacion procesos, soluciones cloud, rust, aws, serverless, chile, las condes, desarrollo web, aplicaciones empresariales"
    />
    <meta name="geo.region" content="CL-RM" />
    <meta name="geo.placename" content="Las Condes, Santiago" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="HotuSoft - Software Solutions" />
    <meta property="og:locale" content="es_CL" />
    <meta property="og:site_name" content="HotuSoft" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:image:alt" content="HotuSoft - Software Solutions" />

    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <link rel="apple-touch-icon" href="/favicon.webp" />

    <!-- Google Fonts - Inter (Non-blocking) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <!-- Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(organizationSchema)}
    />
    <script
      type="application/ld+json"
      set:html={JSON.stringify(websiteSchema)}
    />

    <title>{title}</title>
  </head>
  <body class="font-sans">
    <Navbar />
    {
      (Astro.url.pathname === "/" ||
        Astro.url.pathname.endsWith("/hotusoft") ||
        Astro.url.pathname.endsWith("/hotusoft/")) && <ScrollSpy />
    }
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
